
@{
    var allPages = ViewBag.AllPages as List<string>;
    var assignedPages = ViewBag.AssignedPages as List<string>;
    var roleName = ViewBag.RoleName as string;
    ViewData["Title"] = "Page Access";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h2>Manage Page Access for Role : @roleName</h2>
<form asp-action="Save" method="post">
    <input type="hidden" name="roleName" value="@roleName" />
    @foreach (var vpage in allPages)
    {
        <div class="form-check d-inline-block">
            <input type="checkbox" name="selectedPages" value="@vpage" class="form-check-input" @(assignedPages.Contains(vpage) ? "checked" : "") />
            <label class="form-check-label">@vpage</label>
        </div>
    }
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Permissions</button>
        <a class="btn btn-danger" asp-action="Index" asp-controller="Role">Cancel</a>
    </div>
   
</form>


